    <domain name="Plan.list.statistic" parent="id">
        <field name="text" parent="Plan/text"/>

        <field name="isAuthor" parent="boolean" title="Пользователь является автором"/>
        <field name="isHidden" parent="boolean" title="План скрыт"/>
        <field name="isAllowed" parent="boolean" title="Разрешен доступ"/>

        <field name="isPublic" parent="boolean"/>

        <field name="count" parent="long" title="Количество слов"/>
        <field name="countFull" parent="long"
               title="Общее количество слов (включая скрытые)"/>
        <field name="ratingTask" parent="double" title="Рейтинг за ответы"/>
        <field name="ratingQuickness" parent="double" title="Рейтинг за скорость"/>

    </domain>

    <domain name="Game.list.statistic" parent="Game">
        <field name="countTask" parent="long" title="Общее количество вопросов"/>
        <field name="countAsked" parent="long" title="Количество заданных вопросов"/>
        <field name="countAnswered" parent="long" title="Количество ответов"/>
        <field name="countTrue" parent="long" title="Количество верных ответов"/>
        <field name="countFalse" parent="long" title="Количество ошибок"/>
        <field name="countHint" parent="long" title="Количество подсказок"/>
        <field name="countSkip" parent="long" title="Количество пропусков"/>
    </domain>

    <domain name="Task.list.statistic">
        <field name="task" parent="Task/ref"/>

        <field name="progress" parent="double" title="Степень выученности слова"/>

        <!--
                <field name="answerTime" parent="double" scale="3"/>
        -->
    </domain>

