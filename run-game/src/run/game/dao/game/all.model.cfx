    <domain name="GameTask.Server" parent="GameTask">
        <field name="task" parent="Task/ref"/>

        <field name="textQuestion" parent="TaskQuestion/value"/>
        <field name="soundQuestion" parent="TaskQuestion/value"/>
        <field name="textAnswer" parent="TaskOption/value"/>

        <field name="factQuestion" parent="Task/factQuestion"/>
        <field name="factAnswer" parent="Task/factAnswer"/>
        <field name="factQuestionDataType" parent="Fact/dataType"/>
        <field name="factQuestionValue" parent="Fact/value"/>
        <field name="factAnswerDataType" parent="Fact/dataType"/>
        <field name="factAnswerValue" parent="Fact/value"/>

        <field name="rating" parent="double" scale="3"
               title="Рейтинг за ответы по текущей игре"/>
        <field name="ratingInc" parent="double" scale="3"
               title="Прибавка к рейтингу предыдущей игры"/>
        <field name="ratingDec" parent="double" scale="3"
               title="Потери рейтинга предыдущей игры"/>
    </domain>

    <!-- Список уровней со статистикой по словам -->
